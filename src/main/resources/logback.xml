<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <property name="STDOUT_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %color(%5.5level) %magenta(%pid) --- [%4.15thread] %color(%-40.40logger{39} [%4.4line]) : %color(%msg%n)"/>

    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder
                class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.github.tnoalex.utils.logger.LogPattern">
                <pattern>
                    ${logging.console.pattern:-${STDOUT_PATTERN}}
                </pattern>
            </layout>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>